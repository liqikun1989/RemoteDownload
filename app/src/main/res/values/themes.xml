<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RemoteDownload" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.RemoteDownload">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/SplashThemeDefault</item>
    </style>

    <style name="SplashThemeDefault" parent="Theme.RemoteDownload">
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>